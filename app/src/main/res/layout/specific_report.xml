<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/report_back_btn"
        android:layout_width="76dp"
        android:layout_height="43dp"
        android:text="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/purple_500"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textAllCaps="true"
        android:textColor="@color/purple_500"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="96dp"
        android:layout_marginStart="96dp"
        app:layout_constraintLeft_toLeftOf="@+id/report_back_btn"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/tab_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_back_btn"
        android:orientation="horizontal"
        android:background="@color/purple_500">

        <Button
            android:id="@+id/macronutrient_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Macronutrients"
            android:textSize="12dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            tools:layout_editor_absoluteY="64dp"
            android:background="@color/purple_500"/>

        <Button
            android:id="@+id/micronutrient_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Micronutrients"
            android:textSize="12dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="64dp"
            android:background="@color/purple_500"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/micro_macro_nutrients"
        android:layout_width="match_parent"
        android:layout_height="778dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_linear_layout">
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>